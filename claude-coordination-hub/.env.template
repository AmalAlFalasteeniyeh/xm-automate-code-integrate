# Claude OAuth Hub Configuration
# Copy this file to .env and fill in your actual values

# ==========================================================================
# SYSTEM CONFIGURATION
# ==========================================================================

# Session secret (generate a random string)
SESSION_SECRET=change-this-to-random-string

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=changeme123

# ==========================================================================
# CLICKUP OAUTH (Required)
# ==========================================================================
# Get from: https://app.clickup.com/settings/apps
# Create OAuth App and copy Client ID and Secret

CLICKUP_CLIENT_ID=your_clickup_client_id
CLICKUP_CLIENT_SECRET=your_clickup_client_secret
CLICKUP_STATUS_TASK_ID=86b7cbzjq

# ==========================================================================
# LINEAR OAUTH (Optional)
# ==========================================================================
# Get from: https://linear.app/settings/api
# Create OAuth application

LINEAR_CLIENT_ID=your_linear_client_id
LINEAR_CLIENT_SECRET=your_linear_client_secret

# ==========================================================================
# GITHUB OAUTH (Optional)
# ==========================================================================
# Get from: https://github.com/settings/developers
# Create OAuth App

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REPO=AmalAlFalasteeniyeh/xm-automate-code-integrate

# ==========================================================================
# DISCORD OAUTH (Optional)
# ==========================================================================
# Get from: https://discord.com/developers/applications
# Create Application ‚Üí OAuth2

DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# ==========================================================================
# CODEGEN OAUTH (Optional) - Modal Claude's Platform
# ==========================================================================
# Get from: Codegen platform settings (if available)
# Fallback: Use API key if OAuth not supported

CODEGEN_CLIENT_ID=your_codegen_client_id
CODEGEN_CLIENT_SECRET=your_codegen_client_secret
CODEGEN_API_KEY=your_codegen_api_key

# ==========================================================================
# ANTHROPIC/CLAUDE API (Optional)
# ==========================================================================
# Get from: https://console.anthropic.com/
# Used for programmatic Claude access by all 4 instances

ANTHROPIC_API_KEY=your_anthropic_api_key

# ==========================================================================
# n8n WEBHOOK/API ACCESS (Auto-configured)
# ==========================================================================
# These match the n8n container settings in docker-compose.yml
# Only change if you customize n8n configuration

N8N_WEBHOOK_URL=http://n8n:5678
# N8N_USER and N8N_PASSWORD already set above

# ==========================================================================
# ALLOWED ORIGINS FOR CORS
# ==========================================================================

ALLOWED_ORIGINS=http://localhost:5678,http://localhost:3000

